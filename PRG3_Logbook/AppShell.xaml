<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PRG3_Logbook.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PRG3_Logbook"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Capture"
            ContentTemplate="{DataTemplate local:CapturePage}"
            Route="Capture" 
            Icon="{OnPlatform 'icon_add.png'}" />

        <ShellContent
            Title="Statistic"
            ContentTemplate="{DataTemplate local:StatisticPage}"
            Route="Statistic"
            Icon="{OnPlatform 'icon_monitoring.png'}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:AboutPage}"
            Route="AboutPage"
            Icon="{OnPlatform 'icon_info.png'}" />
    </TabBar>

</Shell>
