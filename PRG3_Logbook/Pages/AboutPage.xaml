<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRG3_Logbook.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <Image
            Source="logo_sanga.png"
            SemanticProperties.Description="Logo of sanga"
            HeightRequest="200"
            HorizontalOptions="Center" />

        <Label Text="This app is written by Athavan Sanga." HorizontalOptions="Center"/>
        <Label Text="I am a passionated Software Engineer." HorizontalOptions="Center"/>

        <Label HeightRequest="250" />

        <Button Text="Homepage" Clicked="HomePage" />
        <Button Text="GitHub" Clicked="GitHubPage" />
    </VerticalStackLayout>
</ContentPage>